				{ name: 'SINGARAVELU ABARANJI MEMORIAL TRUST' },
				{ name: 'Thillai Nadarajar Human Welfare Charitable Trust' },
				{ name: 'THE PUDUCHERRY COIR ARTISANS CO OPERTAIVE SOCIETY LIMITED NO P 774' },
				{ name: 'AANANTHA KUDIL CHARITABLE TRUST' },
				{ name: 'society for civic virtue cultivation' },
				{ name: 'Anbarasi madhar sangam' },
				{ name: 'RAJIVGANDHI HOME FOR HANDICAPPED' },
				{ name: 'Puducherry Corporation for the Development of Women and Differently Abled Persons Limited' },
				{ name: 'RAMYAA CHARITABLE TRUST' },
				{ name: 'LPT RESEARCH FOUNDATION' },
				{ name: 'santhosha nanban' },
				{ name: 'CENTRE FOR SOCIAL ACTION AND WOMENS DEVELOPMENT' },
				{ name: 'THAYAGAM GIRLS HOME' },
				{ name: 'ANJALAIAMAL CHARITABLE TRUST & EDUCATIONAL INSTITUTE FOR DEVELOPMENT' },
				{ name: 'vijay foundation' },
				{ name: 'WISDOM CHARITABLE TRUST' }
			];
			if (!trustNameValue.trim()) {
				form.setAttribute('action', '/volunteer');
				// Generate the HTML for select options
				let optionsHTML = '<select class="input" name="Trust_name" style="font-weight: 700;">';
				optionsHTML += '<option value="">Select a Trust</option>'; // Default option

				trustNames.forEach(trust => {
					optionsHTML += `<option value="${trust.name}">${trust.name}</option>`;
				});

				optionsHTML += '</select>';

				// Set the innerHTML of the container
				trustNameContainer.innerHTML = optionsHTML;
			} else {
				// If value is not null, render the input field
				trustNameContainer.innerHTML = '<input type="text" class="input" placeholder="Trust Name" name="Trust_name" value="' + trustNameValue + '" style="font-weight: 700;" readonly>';
				console.log(trustNameContainer.innerHTML);
			}

		});
	</script>


