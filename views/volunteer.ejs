	<script>
		document.addEventListener("DOMContentLoaded", function() {
			// Get the trust name container element
			var trustNameContainer = document.getElementById('trustNameContainer');
			var form = document.getElementById('volunteerForm');
			
			// Check if the initial value is null or empty
			var trustNameValue = "<%- trust_name %>";
			
			if (!trustNameValue.trim()) {
				form.setAttribute('action', '/volunteer');
				// If value is null, replace the container content with a selection bar
				trustNameContainer.innerHTML = '<select class="input" name="Trust_name" style="font-weight: 700;"><option value="Trust 1">Trust 1</option><option value="Trust 2">Trust 2</option><option value="Trust 3">Trust 3</option></select>';
			} else {
				// If value is not null, render the input field
				trustNameContainer.innerHTML = '<input type="text" class="input" placeholder="Trust Name" name="Trust_name" value="' + trustNameValue + '" style="font-weight: 700;" readonly>';
				console.log(trustNameContainer.innerHTML);
			}
			
		});
