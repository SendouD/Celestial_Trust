<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>MyWork</title>
    <link rel="stylesheet" href="/css/trust_contribution.css" />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0"
    />

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="head">
      <div class="left">
        <div class="logo">
          <img
            id="logo"
            src="../images/logo.png"
            alt=""
            style="width: 50px; height: 50px; padding-top: 10px"
          />
        </div>

        <div class="title">
          <p>Celestial Trust NetWork</p>
        </div>
      </div>
      <div class="right">
        <div class="navlink">
          <a href="account.html">Home</a>
        </div>
        <div class="navlink">
          <a href="account.html">About</a>
        </div>
        <div class="navlink">
          <a href="account.html">Get Involved</a>
        </div>
        <div class="navlink">
          <a href="account.html">Projects</a>
        </div>
        <div class="navlink">
          <a href="account.html">My Account</a>
        </div>
        <div class="navlink">
          <a href="account.html">Sign in</a>
        </div>
      </div>
    </div>
    <div class="us_title">
      <p class="account_para">Quick Info</p>
    </div>
    <div class="account_info">
      <div class="name info">
        <div>Name</div>
        <div><%= trust.name %></div>
      </div>
      <div class="user_id info">
        <div>Unique Id</div>
        <div><%= trust.trust_unique_no %></div>
      </div>
      <div class="date_joined info">
        <div>State</div>
        <div><%= trust.state %></div>
      </div>
      
    <div class="us_title">
      <p class="account_para">My Contribution</p>
    </div>

    <div class="give_the_date_range">
      <form
        action="/contribution/trust/donation-date-wise"
        method="post"
        class="donation_form"
      >
        <div class="date">
          <div class="date_range">Enter the Date Range</div>
          <div class="main_content">
            <label for="start_date">Enter the Start Date:</label>
            <input type="date" id="start_date" name="start_date" />
            <label for="end_date">Enter the Enter Date:</label>
            <input type="date" id="end_date" name="end_date" />
            <button type="submit" class="btn btn-dark btn-sm">
              Show My Contribution
            </button>
          </div>
        </div>
      </form>
    </div>
    <div class="project_display_table donate_table">
    <table class="display_table">
      <tbody id="tableBody">
        <tr class="t_header">
          <th>User Name</th>
          <th>Date of Donation</th>
          <th>Amount Donated</th>
        </tr>
        <% if(user_donations.length !=0) { %>
          <% user_donations.forEach((user_donation)=> { %>
            <tr>
              <td><a href=""><%- user_donation.user_name %></a></td>
              <td><%- user_donation.date_of_Donation %></td>
              <td><%- user_donation.amount_Donated %></td>
            </tr>
            <% }); %>
              <% }else{ %>
                <tr>
                  <td colspan="5">No Donation Work</td>
                </tr>
                <% } %>
      </tbody>
    </table>
  </div>

  <div class="print_btn" id="donate_btn">
    <button type="button" class="btn btn-dark btn-sm" style="width: 100px">
      Print
    </button>
  </div>
  
    <div class="us_title">
      <p class="account_para">Volunteer Work</p>
    </div>

    <div class="give_the_date_range">
      <form
        action="/contribution/trust/volunteer-date-wise"
        method="post"
        class="volunteer_form"
      >
        <div class="date">
          <div class="date_range">Enter the Date Range</div>
          <div class="main_content">
            <label for="start_date">Enter the Start Date:</label>
            <input type="date" id="start_date" name="start_date" />
            <label for="end_date">Enter the Enter Date:</label>
            <input type="date" id="end_date" name="end_date" />
            <button
              type="submit"
              class="btn btn-dark btn-sm"
            >
              Show My Contribution
            </button>
          </div>
        </div>
      </form>
    </div>
    <div class="project_display_table volunteer_table">
      <table class="display_table">
        <tbody id="tableBody">
          <tr class="t_header">
            <th>Volunteer</th>
            <th>No of hours</th>
            <th>Start Date</th>
          </tr>
          <% if(user_volunteerings.length != 0) { %> <%
          user_volunteerings.forEach((user_volunteering) => { %>
          <tr>
            <td><%- user_volunteering.user_name %></td>
            <td><a><%- user_volunteering.no_of_hours %></a></td>
            <td><%- user_volunteering.start_date %></td>
          
          </tr>
          <% }); %> <% }else{ %>
          <tr>
            <td colspan="5">No Volunteer Work</td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>

  <div class="print_btn" id="volunteer_btn">
    <button type="button" class="btn btn-dark btn-sm" style="width: 100px">
      Print
    </button>
  </div><div class="achievements">
      <div class="top_info">
        <div class="donor_title">
          <h4>Our Donors</h4>
        </div>
        
        <div class="achieve_title">
          <div>
            <p>
              across 25+ cities support over India <br />800+children Benifitted
              <br />
            </p>
          </div>
        </div>
      </div>
      <div class="side_info">
        <div class="stats">
          <div>
            <span class="material-symbols-outlined"> restaurant </span>
          </div>
          <div class="numbers">
            <p class="reveals-1">200+</p>
            <p>Meals Served Everyday</p>
          </div>
        </div>
        <div class="stats">
          <div>
            <span class="material-symbols-outlined"> woman </span>
          </div>
          <div class="numbers">
            <p class="reveals-2">1000+</p>
            <p>Woman Empowered</p>
          </div>
        </div>
        <div class="stats">
          <div>
            <span class="material-symbols-outlined"> groups </span>
          </div>
          <div class="numbers">
            <p class="reveals-3">2300+</p>
            <p>Children Educated</p>
          </div>
        </div>
        <div class="stats">
          <div>
            <span class="material-symbols-outlined"> personal_injury </span>
          </div>
          <div class="numbers">
            <p class="reveals-4">50+</p>
            <p>Patients Served</p>
          </div>
        </div>
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/contribution.js"></script>
  </body>
</html>
