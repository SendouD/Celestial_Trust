    <div class="news_letter_form">
      <form action="/admin/news_letter"method="post" role="form" >
        <div class="mb-3">
          <label for="week_number" class="form-label">Week Number</label>
          <input
            type="number"
            class="form-control email"
            id="week_number"
            name="week_no"
            aria-describedby="emailHelp"
            required
          />
        </div>
        <div class="mb-3">
          <label for="subject_email" class="form-label"
            >Subject Of The News Letter</label
          >
          <input type="text" class="form-control sub" id="subject_email" name="sub" required/>
        </div>
        <div class="mb-3">
            <div class="form-floating">
                <textarea
                    class="form-control textarea"
                    id="floatingTextarea2"
                    name="text"
                    style="height: 50vh"
                    required
                ></textarea>
                <label for="floatingTextarea2">Content of the News_letter</label>
            </div>
            
        </div>
        <button type="submit" class="btn btn-secondary">Submit</button>
      </form>
    </div>
