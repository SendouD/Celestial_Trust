    </div>
    <div class="display-reviews">
        <h2 class="review-heading" style="margin-left: 15px; font-weight: 500;">Reviews</h2>
        <% jone.forEach(element=> { %>
            <div class="review-box">
                <div class="review-p-name" style="font-weight: 300;"><span style="font-weight: 500;">Name: </span><%- element.review_name %></div>

                <div class="review-p"><span style="font-weight: 500;">Rating: </span> 
                    <% 

                        const rating = element.review_rating;
                        const filledStars = Math.floor(rating);
                        const emptyStars = 5 - filledStars; 
                    %>
                    <% for (let i = 0; i < filledStars; i++) { %>
                        <span class="review-star">&#9733;</span> 
                    <% } %>
                    <% for (let i = 0; i < emptyStars; i++) { %>
                        <span class="star">&#9734;</span> 
                    <% } %>
                </div>
                


                
                <div class="review-p-comment" style="font-weight: 300;"><span style="font-weight: 500;">Review: </span><br> <%- element.review_comment %></div>
            </div>
            <br>
    
        <% }) %>
