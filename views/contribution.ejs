<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>MyWork</title>
  <link rel="stylesheet" href="/css/contribution.css" />
  <link rel="stylesheet" href="/css/header.css" />
  <link rel="stylesheet"
    href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
</head>

<body>
  <header>
    <div class="header">
      <div class="left">
        <div class="img"><img src="/images/celestial-trust-network-favicon-white.png" alt=""></div>
        <div class="head_title">
          <h1>Celestial Trust Network</h1>
        </div>
      </div>
      <div class="right">
        <div class="navlink">
          <a href="/">Home</a>
        </div>
        <div class="navlink">
          <a href="/about">About</a>
        </div>
        <div class="navlink">
          <a href="/account">Account</a>
        </div>
        <div class="navlink">
          <a href="/trustinfo">Projects</a>
        </div>
        <div class="navlink">
          <a href="account.html">Prominent Trusts</a>
        </div>

        <div class="navlink">
          <a href="/blog">Blog
          </a>
        </div>
        <div class="navlink">
          <a href="/contribution">Contribution</a>
        </div>
      </div>
    </div>

    </div>
    </div>
  </header>
  <div class="us_title top_div">
    <p class="account_para">Quick Info</p>
  </div>
  <div class="account_info">
    <div class="name info">
      <div>Name</div>
      <div><%- user.name %></div>
    </div>
    <div class="user_id info">
      <div>username</div>
      <div><%- user.user_name %></div>
    </div>
    <div class="date_joined info">
      <div>Date Joined</div>
      <div>12/12/24</div>
    </div>
    <div class="phno info">
      <div>Phone Number</div>
      <div><%- user.phone_no%></div>
    </div>
    <div class="volunteer info">
      <div>Volunteer</div>
      <div><%- user.volunteer %></div>
    </div>
  </div>
  <div class="us_title donate_text">
    <p class="account_para">My Contribution</p>
  </div>

  <div class="give_the_date_range">
    <form action="/contribution/donation-date-wise" method="post">
      <div class="date">
        <div class="date_range">Enter the Date Range</div>
        <div class="main_content">
          <label for="start_date">Enter the Start Date:</label>
          <input type="date" id="start_date" name="start_date" required />
          <label for="end_date">Enter the Enter Date:</label>
          <input type="date" id="end_date" name="end_date" required />
          <button type="submit" class="btn btn-dark btn-sm">
            Show My Contribution
          </button>
        </div>
      </div>
    </form>
  </div>
  <div class="project_display_table donate_table">
    <table class="display_table">
      <tbody id="tableBody">
        <tr class="t_header">
          <th>Trust Id</th>
          <th>Trust Name</th>
          <th>Date of Donation</th>
          <th>Amount Donated</th>
        </tr>
        <% if(donated_trusts.length !=0) { %>
          <% donated_trusts.forEach((donated_trust)=> { %>
            <tr>
              <td><%- donated_trust.trust_id %></td>
              <td><a href=""><%- donated_trust.trust_name %></a></td>
              <td><%- donated_trust.date_of_Donation %></td>
              <td><%- donated_trust.amount_Donated %></td>
            </tr>
            <% }); %>
              <% }else{ %>
                <tr>
                  <td colspan="5">No Donation Work</td>
                </tr>
                <% } %>
      </tbody>
    </table>
  </div>

  <div class="print_btn" id="donate_btn">
    <button type="button" class="btn btn-dark btn-sm" style="width: 100px">
      Print
    </button>
  </div>
  <div class="us_title volunteer_text">
    <p class="account_para">Volunteer Work</p>
  </div>

    <div class="give_the_date_range">
      <form action="/contribution/volunteer-date-wise" method="post">
        <div class="date">
          <div class="date_range">Enter the Date Range</div>
          <div class="main_content">
            <label for="start_date">Enter the Start Date:</label>
            <input type="date" id="start_date" name="start_date" required />
            <label for="end_date">Enter the Enter Date:</label>
            <input type="date" id="end_date" name="end_date" required />
            <button type="submit" class="btn btn-dark btn-sm">
              Show My Contribution
            </button>
          </div>
        </div>
      </form>
    </div>
    <div class="project_display_table volunteer_table">
      <table class="display_table">
        <tbody id="tableBody">
          <tr class="t_header">
            <th>Trust Id</th>
            <th>Trust Name</th>
            <th>Start Date</th>
            <th>No of Hours</th>
            <th>Review</th>
            <th>Report</th>
          </tr>
          <% if(volunteer_trusts.length != 0) { %> <%
          volunteer_trusts.forEach((volunteer_trust) => { %>
          <tr>
            <td><%- volunteer_trust.trust_id %></td>
            <td><a><%- volunteer_trust.trust_name %></a></td>
            <td><%- volunteer_trust.start_date %></td>
            <td><%- volunteer_trust.no_of_hours %></td>
            <td><a href="/reviews/<%- volunteer_trust.trust_id %>">Review</a></td>
            <td><a href="/report/<%- volunteer_trust.trust_id %>">Report</a></td>
          
          </tr>
          <% }); %> <% }else{ %>
          <tr>
            <td colspan="5">No Volunteer Work</td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>

  <div class="print_btn" id="volunteer_btn">
    <button type="button" class="btn btn-dark btn-sm" style="width: 100px">
      Print
    </button>
  </div>
  <div class="achievements">
    <div class="top_info">
      <div class="donor_title">
        <h4>Our Donors</h4>
      </div>

      <div class="achieve_title">
        <div>
          <p>
            across 25+ cities support over India <br />800+children Benifitted
            <br />
          </p>
        </div>
      </div>
    </div>
    <div class="side_info">
      <div class="stats">
        <div>
          <span class="material-symbols-outlined"> restaurant </span>
        </div>
        <div class="numbers">
          <p class="reveals-1">200+</p>
          <p>Meals Served Everyday</p>
        </div>
      </div>
      <div class="stats">
        <div>
          <span class="material-symbols-outlined"> woman </span>
        </div>
        <div class="numbers">
          <p class="reveals-2">1000+</p>
          <p>Woman Empowered</p>
        </div>
      </div>
      <div class="stats">
        <div>
          <span class="material-symbols-outlined"> groups </span>
        </div>
        <div class="numbers">
          <p class="reveals-3">2300+</p>
          <p>Children Educated</p>
        </div>
      </div>
      <div class="stats">
        <div>
          <span class="material-symbols-outlined"> personal_injury </span>
        </div>
        <div class="numbers">
          <p class="reveals-4">50+</p>
          <p>Patients Served</p>
        </div>
      </div>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/contribution.js"></script>
</body>

</html>