<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Admin Verification</title>
    <link rel="stylesheet" href="/css/admin_verify.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="content">
      <div class="us_title">
        <p>Verify Trusts</p>
      </div>

      <div class="info_div"><p>Trust verification page for Admins Only</p></div>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Trust Id</th>
            <th scope="col">Trust Name</th>
            <th scope="col">Verification Document</th>
            <th>Approve</th>
          </tr>
        </thead>
        <tbody class="table-group-divider">
          <% if(unverified_trusts.length != 0) { %>
            <% unverified_trusts.forEach((trust) => { %>
              <tr>
                <th scope="row" class="trust_id"><%- trust.trust_unique_no %></th>
                <td><%- trust.name %> </td>
                <td><a href="<%- trust.signed_url %>"><%- trust.trust_unique_no %>_doc</a></td>
                <td><a  class="verify">Review</a></td>
              </tr>
            <% }); %>
          
           <% }else{ %>
              <tr>
                <td colspan="5">No Donation Work</td>
              </tr>
          <%  } %>
        </tbody>
      </table>
    </div>
    <script src="/js/admin_verify.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
